<%% uniq_id = uniq_tag_id("edit_form") -%>
<%% cascade_form_for(:<%= controller_singular_name %>, @<%= controller_singular_name %>, 
   :url => url_for(:controller => '<%= controller_name %>', :action => "update", :id => @<%= controller_singular_name %>.id),
   :html => {:method => :put, :id => uniq_id}) do |f| %>
  <%% form_fragment = render :partial => "<%= controller_name %>/form", :locals => {:f => f, :form_type => :edit} %>

  <%%= f.yield(:head_of_cascade)  %>
  <%%= form_fragment %>
  <%%= partial_scaffold.setup_edit(uniq_id) %>

  <%%= f.yield(:tail_of_cascade)  %>
<%% end %>
