<%% form_for(:<%= controller_singular_name %>, @<%= controller_singular_name %>, 
   :url => url_for(:controller => '<%= controller_file_path %>', :action => "update", :id => @<%= controller_singular_name %>.id),
   :html => {:method => :put}) do |f| %>
  <%%= f.hidden_field :<%= foreign_key_name %> %>
  <%%= f.error_messages %>
<% for attribute in attributes -%>
  <p>
    <%%= f.label :<%= attribute.name %> %><br />
    <%%= f.<%= attribute.field_type %> :<%= attribute.name %> %>
  </p>
<% end -%>
  <p>
    <input type="submit" class="redirect_to show" value="Update"/> |
    <%%= link_to "cancel", {:controller => '<%= controller_file_path -%>', :action => "show", :id => @<%= controller_singular_name %>.id}, :class => "link_to_edit_cancel" %> |
    <%%= link_to "Delete", {:controller => '<%= controller_file_path -%>', :action => "destroy", :id => @<%= controller_singular_name %>.id}, :class => "link_to_destroy" %>
  </p>
<%% end %>
